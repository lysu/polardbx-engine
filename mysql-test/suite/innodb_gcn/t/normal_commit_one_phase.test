--source suite/innodb_gcn/include/init_conn_base_seq.inc

set global innodb_undo_retention = 9000;

--disable_warnings
DROP TABLE IF EXISTS t1;
--enable_warnings

CREATE TABLE t1 (
	id INT NOT NULL,
	value VARCHAR(50) NOT NULL,
	PRIMARY KEY (id)
) ENGINE=InnoDB;

INSERT INTO t1 VALUES (0, 'zero'), (1, 'one'), (2, 'two'), (3, 'three');

connect (conn1,localhost,root,,);
--disable_query_log
eval SET @base_seq = $global_base_seq;
--enable_query_log

connect (conn2,localhost,root,,);
--disable_query_log
eval SET @base_seq = $global_base_seq;
--enable_query_log

connect (conn3,localhost,root,,);
--disable_query_log
eval SET @base_seq = $global_base_seq;
--enable_query_log

connection conn1;

BEGIN;
set innodb_snapshot_seq = @base_seq + 102;


connection conn2;

set innodb_snapshot_seq = @base_seq + 110;
select * from t1;


connection conn1;

select * from t1;
update t1 set value = 'UPDATED!' where id % 2 = 0;
COMMIT;

connection conn3;
set innodb_snapshot_seq = @base_seq + 120;
select * from t1;

connection conn1;
set innodb_snapshot_seq = @base_seq + 130;
update t1 set value = 'UPDATED!' where id % 2 = 1;

connection conn3;
set innodb_snapshot_seq = @base_seq + 140;
select * from t1;

#
# Cleanup
#
disconnect conn1;
disconnect conn2;
disconnect conn3;

connection default;
DROP TABLE t1;

set global innodb_undo_retention = default;
